{
  "name": "FOE Tools Extension",
  "version": "0.1",
  "description": "Supplemental UI Views for Forge of Empires",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "js/background.bundle.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": [
      "https://*.forgeofempires.com/game/*"
    ],
    "js": [
      "js/listener/inject.js"
    ]
  }],
  "web_accessible_resources": [
    "js/listener/listener.js"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.forgeofempires.com/game/*"
    ]
  },
  "page_action": {
    "default_icon": {
      "16": "img/get_started16.png",
      "32": "img/get_started32.png",
      "48": "img/get_started48.png",
      "128": "img/get_started128.png"
    }
  },
  "icons": {
    "16": "img/get_started16.png",
    "32": "img/get_started32.png",
    "48": "img/get_started48.png",
    "128": "img/get_started128.png"
  },
  "content_security_policy": "default-src 'self'; script-src 'self' 'unsafe-eval'; style-src * 'unsafe-inline' 'self' blob:; font-src 'self' https://cdnjs.cloudflare.com https://netdna.bootstrapcdn.com; img-src 'self' data:; connect-src ws://localhost:8000;",
  "manifest_version": 2
}
